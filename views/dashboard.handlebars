{{> header}}

<main>
  <h1>Dashboard</h1>
  {{#each posts}}
    <article>
      <h2><a href="/post/{{id}}">{{title}}</a></h2>
      <button data-id="{{id}}" class="delete-post">Delete</button>
    </article>
  {{/each}}
  <form id="new-post-form">
    <input type="text" id="post-title" name="title" placeholder="Post Title" required>
    <textarea id="post-content" name="content" placeholder="Post Content" required></textarea>
    <button type="submit">Add Post</button>
  </form>
</main>
<script src="/js/post.js"></script>
